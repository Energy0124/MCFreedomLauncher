<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.hopto.energy</groupId>
  <artifactId>MCFreedomLauncher</artifactId>
  <version>1.1.2-SNAPSHOT</version>
  <description>Minecraft Freedom Launcher-Free the New Minecraft Launcher with Energy!</description>
  <url>http://energy0124.github.io/MCFreedomLauncher/</url>
  <scm>
    <connection>scm:git:git://github.com/Energy0124/MCFreedomLauncher.git</connection>
    <developerConnection>scm:git:git@github.com:Energy0124/MCFreedomLauncher.git</developerConnection>
    <url>https://github.com/Energy0124/MCFreedomLauncher</url>
  </scm>
  <build>
    <resources>
      <resource>
        <targetPath>resources/locale</targetPath>
        <directory>${basedir}/src/main/resources/locale/</directory>
        <includes>
          <include>*.properties</include>
        </includes>
      </resource>
      <resource>
        <directory>${basedir}/src/main/java/</directory>
        <includes>
          <include>*.png</include>
        </includes>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.1</version>
        <configuration>
          <source>1.6</source>
          <target>1.6</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <version>2.4</version>
        <configuration>
          <archive>
            <addMavenDescriptor>false</addMavenDescriptor>
            <manifest>
              <mainClass>org.hopto.energy.Main</mainClass>
              <addDefaultSpecificationEntries>true</addDefaultSpecificationEntries>
              <addDefaultImplementationEntries>true</addDefaultImplementationEntries>
            </manifest>
            <manifestEntries />
          </archive>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.1</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <minimizeJar>true</minimizeJar>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>package-win</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.bluestemsoftware.open.maven.plugin</groupId>
            <artifactId>launch4j-plugin</artifactId>
            <version>1.5.0.0</version>
            <executions>
              <execution>
                <phase>package</phase>
                <goals>
                  <goal>launch4j</goal>
                </goals>
                <configuration>
                  <headerType>gui</headerType>
                  <stayAlive>false</stayAlive>
                  <jar>F:\Users\Energy\Documents\GitHub\MCFreedomLauncher\target/MCFreedomLauncher-1.1.2-SNAPSHOT.jar</jar>
                  <outfile>F:\Users\Energy\Documents\GitHub\MCFreedomLauncher\target/MCFreedomLauncher-1.1.2-SNAPSHOT.exe</outfile>
                  <classPath>
                    <mainClass>org.hopto.energy.Main</mainClass>
                    <addDependencies>false</addDependencies>
                    <preCp>anything</preCp>
                  </classPath>
                  <jre>
                    <minVersion>1.6.0</minVersion>
                  </jre>
                  <icon>F:\Users\Energy\Documents\GitHub\MCFreedomLauncher/icon.ico</icon>
                  <versionInfo>
                    <fileVersion>1.0.0.0</fileVersion>
                    <txtFileVersion>1.0.0.0</txtFileVersion>
                    <productVersion>1.0.0.0</productVersion>
                    <txtProductVersion>1.0.0.0</txtProductVersion>
                    <fileDescription>${project.name}</fileDescription>
                    <productName>${project.name}</productName>
                    <copyright>${project.organization.name}, ${project.organization.url}</copyright>
                    <internalName>MCFreedomLauncher</internalName>
                    <originalFilename>MCFreedomLauncher.exe</originalFilename>
                  </versionInfo>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>
</project>

